<!DOCTYPE html>
<html>
  <head>
    <title>the best desing</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  	<nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">THE BEST DESIGN</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <% if current_user %>
            <% if current_user.role == 'ADMIN' %>
              <li class="nav-item"><%= link_to 'INICIO', root_path, class: "nav-link" %></li>
              <li class="nav-item"><%= link_to 'CLIENTES', customers_path, class: "nav-link" %></li>
              <li class="nav-item"><%= link_to 'TAREAS', tasks_path, class: "nav-link" %></li>
              <li class="nav-item"><%= link_to 'REPORTES', root_path, class: "nav-link" %></li>
              <li class="nav-item"><%= link_to('CERRAR SESIÓN', destroy_user_session_path, method: :delete, class: "nav-link") %></li>
            <% else %>
              <li class="nav-item"><%= link_to 'INICIO', root_path, class: "nav-link" %></li>
              <li class="nav-item"><%= link_to 'TAREAS', tasks_path, class: "nav-link" %></li>
              <li class="nav-item"><%= link_to('CERRAR SESIÓN', destroy_user_session_path, method: :delete, class: "nav-link")%></li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </nav>

    <br />

  	<% flash.each do |key, value| %>
      <div class="container">
        <% new_key = key == "notice" ? "success" : "danger" %>
        <div class="alert alert-<%=new_key%>">
          <center> <%= value %> </center>
        </div>
      </div>
    <% end %>

    <div class="container">
      <%= yield %>
    </div>

    <br>
    <br>
    <br>
    <footer>
      <center>
        <p>MANEJO DE TODO TIPO DE PROYECTOS Y CLIENTES</p>
      </center>
    </footer>
    
  </body>
</html>
